<head>
    <link rel="stylesheet" href="/css/users.css">
</head>

<div id="usersDivHead">
    <h1 id="usersDivH1">Users List</h1>
</div>

<section>
    <ul id="usersGrid">
        {{#each users}}
        <li>
            <div class="card usersDivCard">
                <div class="card-body">
                    <div class="usersUlLiDiv">
                        <h3 class="usersUlLih3">First Name:</h3>
                        <h3 class="card-text usersUlLih3" id="usersTitleId">{{this.first_name}}</h3>
                    </div>
                    <div class="usersUlLiDiv">
                        <h3 class="usersUlLih3">Last Name:</h3>
                        <h3 class="card-text usersUlLih3">{{this.last_name}}</h3>
                    </div>
                    <div class="usersUlLiDiv">
                        <h3 class="usersUlLih3">Email:</h3>
                        <h3 class="card-text usersUlLih3">{{this.email}}</h3>
                    </div>
                    <div class="usersUlLiDiv">
                        <h3 class="usersUlLih3">Pets:</h3>
                        <h3 class="card-text usersUlLih3">{{this.pets}}</h3>
                    </div>
                    <div class="usersUlLiDiv">
                        <a href="/details/{{this._id}}" class="btn btn-primary">More Details</a>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</section>

<script src="/scripts/users.js"></script>